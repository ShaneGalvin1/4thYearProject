<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainLayout">

    <TextView
        android:id="@+id/text"
        android:text="@string/livescore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:id="@+id/homeGoal"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="@string/away"
        android:id="@+id/awayGoal"
        android:layout_alignBottom="@+id/homeGoal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:id="@+id/homePoint"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="@string/away"
        android:id="@+id/awayPoint"
        android:layout_alignBottom="@+id/homePoint"
        android:layout_alignRight="@+id/awayGoal"
        android:layout_alignEnd="@+id/awayGoal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/goals"
        android:id="@+id/textView"
        android:layout_above="@+id/awayGoal"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/points"
        android:id="@+id/textView2"
        android:layout_above="@+id/homePoint"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/hGoals"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dash"
        android:text="@string/dash"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/hGoals"
        android:layout_toEndOf="@+id/hGoals"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00"
        android:id="@+id/hPoints"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/homeGoal"
        android:layout_alignEnd="@+id/homeGoal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/aGoals"
        android:layout_alignTop="@+id/hPoints"
        android:layout_alignLeft="@+id/awayGoal"
        android:layout_alignStart="@+id/awayGoal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:text="@string/dash"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignTop="@+id/aGoals"
        android:layout_toLeftOf="@+id/aPoints"
        android:layout_toStartOf="@+id/aPoints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00"
        android:id="@+id/aPoints"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/awayGoal"
        android:layout_alignEnd="@+id/awayGoal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/matchEvent"
        android:layout_below="@+id/homePoint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

</RelativeLayout>
